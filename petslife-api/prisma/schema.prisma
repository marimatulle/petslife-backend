generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  username String @unique
  password String 
  photo String?

  pets Pet[]
}

model Veterinarian {
  id Int @id @default(autoincrement())
  crmv String @unique
  name String
  email String @unique
  username String @unique
  password String
  photo String?
}

model Pet {
  id Int @id @default(autoincrement())
  animalName String
  animalAge Int
  animalSpecies String
  animalColor String
  animalBreed String
  animalSex String
  animalWeight Float?
  isNeutered Boolean
  preExistingConditions String?
  photo String?

  userId Int
  user User @relation(fields: [userId], references: [id])
}